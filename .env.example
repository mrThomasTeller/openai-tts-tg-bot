# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key

# Allowed users (comma-separated list of Telegram IDs or usernames)
ALLOWED_USERS=123456789,@username1,987654321,@username2

# OpenAI TTS model (default: tts-1)
TTS_MODEL=tts-1

# OpenAI TTS voice (default: alloy)
TTS_VOICE=alloy

# Maximum text length per TTS request (in characters)
MAX_TEXT_LENGTH=4096 